model tbm_user {
  id         String   @id @default(uuid())
  nip        String   @unique
  nama       String?  @default("")
  pangkat    String?  @default("")
  golongan   String?  @default("")
  password   String
  is_admin   Boolean  @default(false)
  is_active  Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
